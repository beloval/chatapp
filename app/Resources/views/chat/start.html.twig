{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="shortcut icon" href="{{asset('apple-touch-icon.png')}}">
    <link rel="stylesheet" type="text/css" href="{{asset('css/body.css')}}"/>
{% endblock %}

{% block body %}

    <div id="container">
        <div id="header">
        </div>
        <div id="content">
            <table width="100%" height="100%" align="center">
                <tr>
                    <div id="endpoint1">
                        <label for="user">User</label>
                        <input type="text" name="user" id="user">

                        <label for="conversation">Conversation</label>
                        <input type="text" name="conversation" id="conversation">
                    </div>
                    <div id="endpoint2">
                        <form action="{{link}}" method="POST" id="form">

                            <label for="sender">Sender </label>
                            <input type="text" name="sender" id="sender" >

                            <label for="receiver">Receiver</label>
                            <input type="text" name="receiver" id="receiver">

                            <label for="message">Message</label>
                            <textarea name="message" id="message">enter message ici</textarea> <br />

                            <button type="submit">submit</button>
                            <br/>

                        </form>
                    </div>
                </tr>
            </table>
        </div>
    </div>


{% endblock %}
{% block javascript %}
    <script src='{{asset('js/jquery-2.2.1.js')}}'></script>
{% endblock %}



